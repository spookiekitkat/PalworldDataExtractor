{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Solution",
            "type": "process",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/PalworldDataExtractor.sln"
            ],
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build"
        },
        {
            "label": "Run Cli",
            "type": "process",
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "${workspaceFolder}/Cli/Cli.csproj"
            ],
            "group": "none"
        },
        {
            "label": "Run Tests",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "${workspaceFolder}/Tests/Tests.csproj"
            ],
            "group": "test",
            "problemMatcher": []
        }
    ]
}